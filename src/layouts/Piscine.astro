---
import '../global.css';
import 'lenis/dist/lenis.css';

import Header from '#/components/Global/Header.astro';
import Footer from '#/components/Global/Footer.astro';
import Cursor from '#/components/Global/Elements/Cursor';

interface Props {
  title?: string;
}

const { title = 'Clash of Dev — La piscine' } = Astro.props;
---

<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/icons/logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content="Un évènement organisé par @maislina_" />
  </head>
  <body
    class="relative bg-beige dark:bg-black w-screen overflow-x-hidden min-h-screen flex flex-col px-4 xs:px-8 py-10 lg:py-5"
  >
    <Cursor
      follower
      client:load
    />
    <Header />
    <slot />
    <Footer />
    <script src="./main.ts"></script>
  </body>
</html>
